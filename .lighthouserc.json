{
  "ci": {
    "collect": {
      "url": [
        "http://localhost:8080/"
      ],
      "numberOfRuns": 3,
      "settings": {
        "preset": "desktop",
        "formFactor": "desktop",
        "screenEmulation": {
          "mobile": false
        }
      }
    },
    "assert": {
      "assertions": {
        "categories:performance": [
          "error",
          {
            "minScore": 0.9
          }
        ],
        "categories:accessibility": [
          "error",
          {
            "minScore": 1.0
          }
        ],
        "categories:best-practices": [
          "error",
          {
            "minScore": 0.95
          }
        ],
        "categories:seo": [
          "error",
          {
            "minScore": 0.95
          }
        ],
        "color-contrast": "error",
        "viewport": "off"
      }
    }
  }
}